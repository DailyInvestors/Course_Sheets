function focusOnInput(elementId) {
    const inputElement = document.getElementById(elementId);
    if (inputElement) {
        inputElement.focus();
        console.log(`Focused on input: ${elementId}`);
    } else {
        console.error(`Input element with ID '${elementId}' not found.`);
    }
}

